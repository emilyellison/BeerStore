<!DOCTYPE html>
<html>
	<head>
	  <title>BeerOn Store</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class='my_content'>
			<% ['success', 'notice', 'error'].each do |type| %>
				<% if flash[type.to_sym] %>
					<p class='alert alert-<%= type %>'><%= flash[type.to_sym] %></p>
				<% end %>
			<% end %>
			<%= yield %>
		</div>
	</body>
</html>
