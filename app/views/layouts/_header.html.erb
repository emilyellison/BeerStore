<header>
	<h1><%= link_to 'BeerOn Store', root_url %></h1>
	<ul>
		<li><%= link_to 'Home', root_url %></li>
		<% if @current_user %>
			<li><%= link_to 'Profile', user_url(@current_user) %></li>
			<li><%= link_to 'Add your Beer', new_beer_url %></li>
			<li><%= link_to 'Sign Out', sign_out_url %></li>
		<% else %>
			<li><%= link_to 'Sign In', sign_in_url %></li>
			<li><%= link_to 'Sign Up', new_user_url %></li>
		<% end %>
	</ul>
</header>